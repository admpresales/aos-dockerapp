version: '0.1.0'
name: nimbusapp-test
description: Simple docker-app definition for testing nimbusapp
namespace: admpresales

---
version: '3.2'

services:
  web:
    container_name: 'nimbusapp-test-web'
    image: "httpd:${APACHE_VERSION}"
    ports:
      - "${PORT}:80"
    volumes:
      - type: bind
        source: "${HTDOCS}"
        target: "/usr/local/apache2/htdocs"
    environment:
      message: "${MESSAGE}"

---
APACHE_VERSION: 2.4
PORT: 12345
HTDOCS: '.'
MESSAGE: ""
